img
    width: 100%

.header
    height: 30px
    padding: 10px 0
    text-align: center
    background: #005e94 url(./img/header-bg.png) repeat-x;
    color: #ffffff

#content-wrapper
    position: absolute
    top: 52px
    bottom: 0
    left: 0
    width: 100%
    background-color: #e2e2e2   

.content
    background-color: #e2e2e2     

.ticket-info
    padding: 10px
    background-color: #f2f2f2

.selected .ticket-info
    background-color: #005b8f

.ticket-title
    font-size: 1.2em    
    margin-bottom: 0.5em

.ticket-title h4
    font-weight: normal

.selected .ticket-title,
.selected .ticket-extral-info
    color: #ffffff

.ticket-extral-info
    color: #999999

.line
    height: 1px
    background-color: #ffffff
    margin: 1px 0

.ticket-no
    float: left

.ticket-vertify-status
    padding-left: 30px
    float: right

.ico-vertify-status-error,
.ico-vertify-status-ok
    color: #0082cc

.selected .ico-vertify-status-waiting
    background: url(./img/sprites.png) no-repeat left -120px

.ico-vertify-status-ok
    background: url(./img/sprites.png) no-repeat left 0

.ico-vertify-status-error
    background: url(./img/sprites.png) no-repeat left -40px

.ico-vertify-status-waiting
    background: url(./img/sprites.png) no-repeat left -160px

.tip-wrapper
    position: absolute
    top: 0
    width: 100%

.tip-info
    width: 70%
    margin: 0px auto
    padding: 15px 25px
    border: 3px solid #0082cd
    border-radius: 0 0 8px 8px
    background-color: #ffffff

.info-detail
    padding: 10px 0        

.info-detail h2
    text-align: center
    font-weight: normal

.info-text
    text-align: center

.tip-info .line
    background-color: #dddddd

.btns
    margin-top: 10px

.btn
    width: 100%
    height: 40px
    line-height: 40px
    font-family: '微软雅黑', '黑体', '宋体'
    font-size: 1.2em
    color: #818181
    margin-bottom: 10px
    background-color: #e5e5e5
    border: 1px solid #dddddd
    border-radius: 5px

.btn-conn
    background-color: #38a5e4
    border: 1px solid #0082cd
    color: #ffffff

.info-img
    padding: 10px 0

.upload-item-img, .shop-img
    width: 80px

.upload-item-name,
.shop-name
    font-size: 1.2em
    font-weight: normal

.upload-item-detail,
.shop-address
    color: #999999

.ticket-head-sep
    margin: 20px 0 8px 0
    text-align: right
    padding-right: 10px
    background: url(./img/sep-head.png) no-repeat right center

.item-num,
.item-from
    padding-right: 20px

.item-num i,
.item-from i
    color: #0082cc

.ticket-end-sep    
    position: relative
    margin: 10px 0
    text-align: center

.item-time
    margin: 0 auto
    padding: 0 1em    
    z-index: 10
    color: #cccccc

.item-time i
    color: #666666

.footer
    position: absolute
    bottom: 0
    width: 100%
    background-color: #ffffff

.shop-item
    padding: 10px 15px

.item-info
    padding-left: 95px


    







